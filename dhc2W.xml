<!--  DHC-2 Beaver
2004 Syd Adams -->

<airplane mass="2850">
  <approach speed="45" aoa="6">
    <control-setting axis="/controls/engines/engine[0]/throttle" value="0.2"/>
    <control-setting axis="/controls/engines/engine[0]/mixture" value="1.0"/>
    <control-setting axis="/controls/engines/engine[0]/propeller-pitch" value="1.0"/>
    <control-setting axis="/controls/flight/flaps" value="1.0"/>
    <solve-weight idx="0" weight="180"/>
    <solve-weight idx="1" weight="0"/>
  </approach>
  <cruise speed="120" alt="15000">
    <control-setting value="1.0" axis="/controls/engines/engine[0]/throttle"/>
    <control-setting value="1.0" axis="/controls/engines/engine[0]/mixture"/>
    <control-setting value="1.0" axis="/controls/engines/engine[0]/propeller-pitch"/>
    <control-setting value="0.0" axis="/controls/flight/flaps"/>
    <solve-weight idx="0" weight="180"/>
    <solve-weight idx="1" weight="0"/>
  </cruise>
  <cockpit x="-0.825" y="-0.26" z="0.70"/>

 <fuselage width="1.6" ax="2.5" ay="0" az="0" bx="3.7" by="0" bz="0.0" taper="0.75" midpoint="0.25"/>

  <wing x="0.0" y="0.6" z="0.6" chord="1.8" taper="1.0" length="6.8" dihedral="4" incidence="2.0" camber="0.0">
    <stall width="4" aoa="16" peak="1.5"/>
    <flap0 drag="1.6" end="0.58" lift="1.5" start="0.02"/>
    <flap1 drag="1.2" end="0.97" lift="1.3" start="0.58"/>
    <control-input control="FLAP0" axis="/controls/flight/flaps"/>
    <control-input split="true" control="FLAP1" axis="/controls/flight/aileron"/>
    <control-input split="true" control="FLAP1" axis="/controls/flight/aileron-trim"/>
    <control-output prop="/surface-positions/flap-pos-norm" control="FLAP0"/>
    <control-output prop="/surface-positions/left-aileron-pos-norm" side="left" control="FLAP1"/>
    <control-output prop="/surface-positions/right-aileron-pos-norm" side="right" control="FLAP1"/>
    <control-speed transition-time="8" control="FLAP0"/>
  </wing>

  <hstab x="-6.0" y="0.2" z="0.2"  chord="1.2" effectiveness="1.6" taper=".7" length="2.5">
    <stall width="4" aoa="16" peak="1.5"/>
    <flap0 drag="1.2" end="1" lift="1.5" start="0"/>
    <control-input control="FLAP0" axis="/controls/flight/elevator"/>
    <control-input control="FLAP0" axis="/controls/flight/elevator-trim"/>
    <control-output prop="/surface-positions/elevator-pos-norm" control="FLAP0"/>
  </hstab>

  <vstab x="-5.5" y="0" z="0.2" sweep="15"  chord="3.0" taper=".2" length="2.0">
    <stall width="3" aoa="14" peak="1.5"/>
    <flap0 drag="1.2" end="1" lift="1.6" start="0"/>
    <control-input control="FLAP0" axis="/controls/flight/rudder" invert="true"/>
    <control-input control="FLAP0" axis="/controls/flight/rudder-trim" invert="true"/>
    <control-output prop="/surface-positions/rudder-pos-norm" control="FLAP0" min="1" max="-1"/>
  </vstab>

  <!--  Pratt & Whitney R-985 Wasp Junior  -->
  <propeller moment="45" x="2.0" y="0.0" z="0.0" mass="668" radius="1.2" cruise-power="400" cruise-alt="5000"
   min-rpm="1400" max-rpm="2300" cruise-speed="110" cruise-rpm="2200" fine-stop="0.8" coarse-stop="1.8">
    <piston-engine eng-rpm="2300" alt="0" eng-power="450"
     displacement="985" compression="6"/>
    <actionpt x="2.5" y="0.0" z="0.0"/>
    <control-input control="THROTTLE" axis="/controls/engines/engine[0]/throttle"/>
    <control-input control="STARTER" axis="/controls/engines/engine[0]/starter"/>
    <control-input control="MAGNETOS" axis="/controls/engines/engine[0]/magnetos"/>
    <control-input control="MIXTURE" axis="/controls/engines/engine[0]/mixture"/>
    <control-input control="ADVANCE" axis="/controls/engines/engine[0]/propeller-pitch"/>
  </propeller>

  <gear x="1.0" y="2.0" z="-1.926" compression="0.2">
     <control-input control="BRAKE" axis="/controls/gear/brake-parking"/>
    <control-input control="BRAKE" axis="/controls/gear/brake-left"/>
  </gear>

  <gear x="1.0" y="-2.0" z="-1.926"  compression="0.2">
     <control-input control="BRAKE" axis="/controls/gear/brake-parking"/>
    <control-input control="BRAKE" axis="/controls/gear/brake-right"/>
  </gear>

  <gear x="-5.79" y="0.0" z="-0.74" compression="0.2">
  <control-input axis="/controls/flight/rudder" control="STEER" square="true"
                 src0="-1" src1="1" dst0="0.5" dst1="-0.5"/>
  </gear>

<!-- Fuel  -->
  <tank x="1.5" y="0" z="-0.7" capacity="210"/>
  <tank x="0.0" y="0" z="-0.7" capacity="210"/>
  <tank x="-1.5" y="0" z="-0.7" capacity="156"/>
  <tank x="0" y="0" z="0" capacity="0"/>
  <tank x="0" y="0" z="0" capacity="0"/>

  <ballast x="2.0" y="0.0" z="0.0" mass="270"/>

  <weight x="0.75" y="0.0" z="-0.5" mass-prop="/sim/weight[0]/weight-lb"/>
  <weight x="-1.0" y="0" z="-0.5" mass-prop="/sim/weight[1]/weight-lb"/>

  <hitch name="aerotow" x="-6.2" y="0" z="-0.12"  force-is-calculated-by-other="1">
  <tow length="60" weight-per-meter="0.035" elastic-constant="9000" break-force="10000" mp-auto-connect-period="1.0"/>
  <winch max-tow-length="1000" min-tow-length="60" initial-tow-length="60"/>
</hitch>


</airplane>
