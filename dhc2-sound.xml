<?xml version="1.0"?>
 
<PropertyList>
<fx>
  <crank>
   <name>cranking</name>
   <mode>looped</mode>
   <path>Aircraft/dhc2/Sound/starter.wav</path>
   <condition>
    <property>/engines/engine/cranking</property>
   </condition>
   <volume>
   <property>/engines/engine/cranking</property>
    <offset>0.5</offset>
   </volume>
  </crank>
  

  <engine>
   <name>enginerun</name>
   <mode>looped</mode>
   <path>Aircraft/dhc2/Sound/waspjr.wav</path>
   <condition>
    <property>/engines/engine/running</property>
   </condition>
    <volume>
    <property>/controls/engines/engine/throttle</property>
    <min>0.5</min>
    <max>1.00</max>
   </volume>
   <pitch>
    <property>/engines/engine/rpm</property>
    <factor>0.0004</factor>
    <offset>0.2</offset>
   </pitch>
  </engine>
  
  <rumble>
   <name>rumble</name>
   <mode>looped</mode>
   <path>Sounds/rumble.wav</path>
   <condition>
    <or>
     <property>/gear/gear[0]/wow</property>
     <property>/gear/gear[1]/wow</property>
     <property>/gear/gear[2]/wow</property>
    </or>
   </condition>
   <volume>
    <property>/velocities/airspeed-kt</property>
    <type>log</type>
    <factor>0.2</factor>
   </volume>
  </rumble>

  <squeal>
   <name>squeal</name>
   <path>Sounds/squeal.wav</path>
   <condition>
    <or>
     <property>/gear/gear[0]/wow</property>
     <property>/gear/gear[1]/wow</property>
    </or>
   </condition>
   <volume>
    <property>/velocities/speed-down-fps</property>
    <factor>0.5</factor>
    <max>1.0</max>
   </volume>
   <volume>
    <property>/velocities/airspeed-kt</property>
    <factor>0.01</factor>
    <max>1.0</max>
   </volume>
   <volume>
    <internal>dt_stop</internal>
    <factor>0.05</factor>
    <max>1.0</max>
   </volume>
   <pitch>
    <property>/velocities/airspeed-kt</property>
    <factor>0.0025</factor>
    <offset>0.5</offset>
    <max>1.0</max>
   </pitch>
  </squeal>
 
  <flap>
   <name>flaps</name>
   <mode>in-transit</mode>
   <path>Sounds/flaps.wav</path>
   <property>/surface-positions/flap-pos-norm</property>
   <volume>
    <factor>0.15</factor>
   </volume>
  </flap>

  <wind>
   <name>wind</name>
   <mode>looped</mode>
   <path>Sounds/wind.wav</path>
   <property>/velocities/airspeed-kt</property>
   <volume>
     <property>/velocities/airspeed-kt</property>
     <factor>0.0025</factor>
     <min>0.00</min>
     <max>0.25</max>
   </volume>
   <pitch>
    <property>/velocities/airspeed-kt</property>
    <factor>0.01</factor>
    <offset>0.5</offset>
    <max>1.0</max>
   </pitch>
  </wind>
 
  <stall>
   <name>stall</name>
   <mode>looped</mode>
   <path>Sounds/stall.wav</path>
   <property>/sim/alarms/stall-warning</property>
   <volume>
    <property>/sim/alarms/stall-warning</property>
    <max>1.0</max>
   </volume>
  </stall>
 
      
      
 <!--                  Toggle Switches                  -->     
   
<switch>
   <name>click on</name>
   <mode>once</mode>
         <path>Aircraft/dhc2/Sound/click.wav</path>
   <condition>
<property>/sim/sound/switch</property>
</condition>
   <volume>
    <factor>0.45</factor>
   </volume>
  </switch>

<switch>
   <name>click off</name>
   <mode>once</mode>
        <path>Aircraft/dhc2/Sound/click.wav</path>
   <condition>
   <not>
<property>/sim/sound/switch</property>
</not>
</condition>
   <volume>
    <factor>0.45</factor>
   </volume>
  </switch>

        
</fx>
 
</PropertyList>
