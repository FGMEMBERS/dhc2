<?xml version="1.0"?>
 
<PropertyList>
<fx>
  <crank>
   <name>cranking</name>
   <mode>looped</mode>
   <path>Aircraft/dhc2/Sound/starter.wav</path>
   <condition>
    <property>/engines/engine/cranking</property>
   </condition>
   <volume>
   <property>/engines/engine/cranking</property>
    <offset>0.5</offset>
   </volume>
  </crank>
  

  <engine>
   <name>enginerun</name>
   <mode>looped</mode>
   <path>Aircraft/dhc2/Sound/waspjr.wav</path>
   <condition>
    <property>/engines/engine/running</property>
   </condition>
    <volume>
    <property>/controls/engines/engine/throttle</property>
    <min>0.5</min>
    <max>1.00</max>
   </volume>
   <pitch>
    <property>/engines/engine/rpm</property>
    <factor>0.0004</factor>
    <offset>0.2</offset>
   </pitch>
  </engine>
  
  <rumble>
   <name>rumble</name>
   <mode>looped</mode>
   <path>Sounds/rumble.wav</path>
   <condition>
    <or>
     <property>/gear/gear[6]/wow</property>
     <property>/gear/gear[7]/wow</property>
    </or>
   </condition>
   <volume>
    <property>/velocities/airspeed-kt</property>
    <type>log</type>
    <factor>0.4</factor>
   </volume>
  </rumble>

  <splash>
   <name>splash</name>
   <mode>looped</mode>
   <path>Sounds/rumble.wav</path>
   <condition>
    <or>
     <property>/gear/gear[0]/wow</property>
     <property>/gear/gear[1]/wow</property>
    </or>
   </condition>
   <volume>
    <property>/velocities/airspeed-kt</property>
    <offset>0.0</offset>
	<factor>0.02</factor>
	<min>0.4</min>
	<max>0.9</max>
   </volume>
   <pitch>
    <property>/velocities/airspeed-kt</property>
    <factor>0.01</factor>
    <offset>1.2</offset>
   <max>1.5</max> 
   </pitch>
  </splash>


  <squeal>
   <name>squeal</name>
   <path>Sounds/squeal.wav</path>
   <condition>
    <or>
     <property>/gear/gear[6]/wow</property>
     <property>/gear/gear[7]/wow</property>
    </or>
   </condition>
   <volume>
    <property>/velocities/speed-down-fps</property>
    <factor>0.5</factor>
    <max>1.0</max>
   </volume>
   <volume>
    <property>/velocities/airspeed-kt</property>
    <factor>0.01</factor>
    <max>1.0</max>
   </volume>
   <volume>
    <internal>dt_stop</internal>
    <factor>0.05</factor>
    <max>1.0</max>
   </volume>
   <pitch>
    <property>/velocities/airspeed-kt</property>
    <factor>0.0025</factor>
    <offset>0.5</offset>
    <max>1.0</max>
   </pitch>
  </squeal>
 
  <flap>
   <name>flaps</name>
   <mode>in-transit</mode>
   <path>Sounds/flaps.wav</path>
   <property>/surface-positions/flap-pos-norm</property>
   <volume>
    <factor>0.15</factor>
   </volume>
  </flap>

  <wind>
   <name>wind</name>
   <mode>looped</mode>
   <path>Sounds/wind.wav</path>
   <property>/velocities/airspeed-kt</property>
   <volume>
     <property>/velocities/airspeed-kt</property>
     <factor>0.01</factor>
     <min>0.0</min>
     <max>0.5</max>
   </volume>
   <pitch>
    <property>/velocities/airspeed-kt</property>
    <factor>0.001</factor>
    <offset>0.5</offset>
     <min>0.5</min>
     <max>1.0</max>
   </pitch>
  </wind>
 
  <stall>
   <name>stall</name>
   <mode>looped</mode>
   <path>Sounds/stall.wav</path>
   <property>/sim/alarms/stall-warning</property>
   <volume>
    <property>/sim/alarms/stall-warning</property>
    <max>1.0</max>
   </volume>
  </stall>

    <gear>
      <name>gear</name>
      <mode>in-transit</mode>
      <path>Sounds/gear.wav</path>
      <property>gear/gear[6]/position-norm</property>
      <pitch>
        <internal>dt_play</internal>
        <offset>1.0</offset>
        <factor>-0.001</factor>
      </pitch>
    </gear>

    <gear>
      <name>gear-lock</name>
      <path>Sounds/gear-lck.wav</path>
      <condition>
        <equals>
          <property>gear/gear[6]/position-norm</property>
          <value>0</value>
        </equals>
      </condition>
    </gear>
 
      
      
 <!--                  Toggle Switches                  -->     
   
<switch>
   <name>click on</name>
   <mode>once</mode>
         <path>Aircraft/dhc2/Sound/click.wav</path>
   <condition>
<property>sim/sound/switch</property>
</condition>
   <volume>
    <offset>0.7</offset>
   </volume>
  </switch>

<switch>
   <name>click off</name>
   <mode>once</mode>
        <path>Aircraft/dhc2/Sound/click.wav</path>
   <condition>
   <not>
<property>sim/sound/switch</property>
</not>
</condition>
   <volume>
    <offset>0.7</offset>
   </volume>
  </switch>

        
</fx>
 
</PropertyList>
