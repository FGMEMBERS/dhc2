<PropertyList>
 <sim>

  <description>de Havilland Beaver (YASim) 3D cockpit</description>
  <author>Syd Adams</author>

  <flight-model>yasim</flight-model>
  <aero>dhc2F</aero>
  <fuel-fraction>0.75</fuel-fraction>
  
  <startup>
   <splash-texture>Aircraft/dhc2/dhc-2splash.rgb</splash-texture>
  </startup>

    <panel>
   <path></path>
  </panel>

  <systems>
   <electrical>
    <path></path>
   </electrical>
  </systems> 

  <sound>
   <path>Aircraft/dhc2/dhc2-sound.xml</path>
  </sound>


  <model>
   <path>Aircraft/dhc2/Models/dhc2floats.xml</path>
   <material>
     <instruments>
       <diffuse>
         <red type="string">1.0</red>
         <green type="string">1.0</green>
         <blue type="string">1.0</blue>
       </diffuse>
       <ambient>
         <red type="string">0.2</red>
         <green type="string">0.2</green>
         <blue type="string">0.2</blue>
       </ambient>
       <specular>
         <red type="string">0.0</red>
         <green type="string">0.0</green>
         <blue type="string">0.0</blue>
       </specular>
       <emission>
         <red type="string">0.9</red>
         <green type="string">0.5</green>
         <blue type="string">0.2</blue>
       </emission>
       <transparency>
         <alpha>1.0</alpha>
       </transparency>
       <shininess>0</shininess>
       <factor>0.0</factor>
         </instruments>
       </material>
       </model>

  <virtual-cockpit archive="y">true</virtual-cockpit>
  <allow-toggle-cockpit archive="y">true</allow-toggle-cockpit>

  <view>
   <internal archive="y">true</internal>
   <config>
     <!-- x/y/z == right/up/back -->
     <x-offset-m archive="y">-0.25</x-offset-m>
     <y-offset-m archive="y">0.65</y-offset-m>
     <z-offset-m archive="y">-0.60</z-offset-m>
     <pitch-offset-deg>-12</pitch-offset-deg>
     <default-field-of-view-deg type="double">60.0</default-field-of-view-deg>
     </config>
  </view>

  <current-view>
    <field-of-view>60.0</field-of-view>
  </current-view>
  
  <chase-distance-m type="double" archive="y">-20.0</chase-distance-m>
  
    <flaps>
   <setting>0.00</setting> <!-- Cruise -->
   <setting>0.10</setting> <!--  -->
   <setting>0.20</setting> <!-- Climb -->
   <setting>0.30</setting> <!--  -->
   <setting>0.40</setting> <!--  -->
   <setting>0.50</setting> <!--  -->
   <setting>0.60</setting> <!--  -->
   <setting>0.70</setting> <!--  -->
   <setting>0.80</setting> <!--  -->
   <setting>0.90</setting> <!--  -->
   <setting>1.0</setting> <!-- Full -->
  </flaps>

  <help>
   <key>
    <name>f</name>
    <desc>fuel tank select</desc>
   </key>
   <key>
    <name>!</name>
    <desc>toggle battery switch</desc>
   </key>
   <key>
    <name>@</name>
    <desc>toggle alternator switch</desc>
   </key>
   <key>
    <name>#</name>
    <desc>toggle fuel pump</desc>
   </key>
   <key>
    <name>$</name>
    <desc>toggle pitot heat</desc>
   </key>
   <key>
    <name>%</name>
    <desc>toggle landing light</desc>
   </key>
   <key>
    <name>^</name>
    <desc>toggle nav lights</desc>
   </key>
  </help>
</sim>

  <engines>
   <engine>
   <rpm type="double">700</rpm>
    <magnetos>3</magnetos>
    <running>false</running>
  </engine>
  </engines>
  
 <controls> 
<fuel>
<switch-position type = "int">0</switch-position>
 <tank n="0">
 <fuel_selector>true</fuel_selector>
 </tank>
 <tank n="1">
 <fuel_selector>true</fuel_selector>
 </tank>
 <tank n="2">
 <fuel_selector>true</fuel_selector>
 </tank>
</fuel>
 </controls> 

 <environment>
   <turbulence>
     <use-cloud-turbulence>true</use-cloud-turbulence>
   </turbulence>
 </environment>
   
 <input>
  <keyboard>
    <key n="102">
  <name>f</name>
  <desc>fuel tank select</desc>
  <binding>
   <command>nasal</command>
   <script>dhc2.fuel_switch()</script>
  </binding>
  </key> 

  <key n="33">
  <name>!</name>
  <desc>Toggle Battery Switch</desc>
  <binding>
   <command>nasal</command>
   <script>dhc2.batt_switch()</script>
  </binding>
  </key> 

  <key n="64">
  <name>@</name>
  <desc>Toggle Alternator Switch</desc>
  <binding>
   <command>nasal</command>
   <script>dhc2.alt_switch()</script>
  </binding>
  </key> 

  <key n="35">
  <name>#</name>
  <desc>Toggle Fuel Pump</desc>
  <binding>
   <command>nasal</command>
   <script>dhc2.f_pump_switch()</script>
  </binding>
  </key> 

  <key n="36">
  <name>$</name>
  <desc>Toggle Pitot Heat</desc>
  <binding>
   <command>nasal</command>
   <script>dhc2.pitot_heat_switch()</script>
  </binding>
  </key> 

  <key n="37">
  <name>%</name>
  <desc>Toggle Landing Light</desc>
  <binding>
   <command>nasal</command>
   <script>dhc2.landing_light_switch()</script>
</binding>
  </key> 

    <key n="94">
  <name>^</name>
  <desc>Toggle Nav Lights</desc>
  <binding>
   <command>nasal</command>
   <script>dhc2.nav_light_switch()</script>
</binding>
  </key> 
</keyboard> 

</input>



<yasim> 
     <pilot-lb type="double">180</pilot-lb>
     <copilot-lb type="double">190</copilot-lb>
     <cargo type="double">0</cargo>
</yasim>

<nasal>
	<dhc2>
          <file>Aircraft/dhc2/Models/dhc2.nas</file>
          <file>Aircraft/dhc2/dhc2-electrical.nas</file>
	</dhc2>
</nasal>
</PropertyList>
